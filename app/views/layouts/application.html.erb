<!DOCTYPE html>
<html>
<head>
  <title>Twodowns</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= stylesheet_link_tag '/jqtouch/jqtouch.css', '/jqtouch/themes/apple/theme.css' %>
  <%= javascript_include_tag '/jqtouch/jquery-1.4.2.min.js', '/jqtouch/jqtouch.js', "mobile" %>

</head>
<body>
  <div class="current">
    <div class="toolbar">
      <%= link_to "Back", nil, :class => 'back'unless current_page? root_path %>
      <h1>Twodowns</h1> 
    </div> 

    <% unless flash.empty? %>
      <div class="info">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash_#{name}" %>
        <% end %>
        </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
